<div class="container">
		<div class="col-xs-3">
			<%= render 'users/userinfo', user: @book.user, book: @newbook %>
		</div>

		<div class="col-xs-9">
			<h1>Book detail</h1>

			<table class="table table-hover table-inverse">
				<tbody>
					<tr>
						<td>
						  <%= link_to user_path(@book.user) do %>
						    <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', size: '40x40', class: "pull-left profile-img", fallback: "no_image.jpg" %><br>
						    <%= @book.user.name %>
						  <% end %>
						<td>
						<td>
						  <%= link_to book_path(@book) do %>
							  <%= @book.title %>
						  <% end %>
					    </td>

						<td>
						  <p><%= @book.body %></p>
						</td>

						<td>
							<% if @book.user == current_user %>
							  <%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success edit_book_15186" %>
							<% end %>
						</td>
						<td>
							<% if @book.user == current_user %>
							  <%= link_to "Destroy", book_path(@book), class:"btn-sm btn-danger destroy_book_15186", method: :delete, "data-confirm" => "Are you sure?" %>
							<% end %>
						</td>
					</tr>
		</div>
</div>