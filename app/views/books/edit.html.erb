<div class="top-message col-md-offset-3 col-md-3">

		<h1>Editing Book</h1>
		<!-- form_for部分 -->
		<%= form_for(@book) do |f| %>

			<% if @book.errors.any? %>
				<div id="error_explanation">
					<h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
					<ul>
					<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
					</ul>
				</div>
			<%end %>

			<h4>Title</h4>
			<%= f.text_field :title %>
			<h4>Opinion</h4>
			<%= f.text_area :body %>
			<div>
				<%= f.submit 'Update Book' %>
			</div>
			<div>
				<%= link_to "Show", book_path(@book) %>
				<%= link_to "Back", books_path %>
			</div>
		<% end %>


</div>