<div class="container">
		<div class="col-xs-3">
			<%= render 'users/userinfo', user: @user, book: @book %>
		</div>

		<div class="col-xs-9">
			<h1>Books</h1>

			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th class="image"></th>
						<th class="title">Title</th>
						<th class="body">Opinion</th>
					</tr>
				</thead>
				<tbody>

					<% @user.books.each do |book| %>
					<tr>
						<td>
							<%= link_to user_path(book.user) do %>
							  <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', size: '50x50', class: "pull-left profile-img", fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td>
							<%= link_to book_path(book) do %>
							  <span><%= book.title %></span>
							<% end %>
						</td>
						<td>
							<span><%= book.body %></span>
						</td>
					</tr>
					<% end %>

				</tbody>
			</table>
		</div>
</div>

