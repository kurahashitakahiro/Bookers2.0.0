<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', size: '100x100', class: "pull-left profile-img", fallback: "no_image.jpg" %>

<table class="table">
	<tbody>
		<tr>
			<td>name</td>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<td>introduction</td>
			<td><%= user.introduction %></td>
		</tr>
	</tbody>
</table>

	<%= link_to "", edit_user_path(user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

<h2>New book</h2>
<%= form_for(book) do |f| %>

	<% if book.errors.any? %>
		<div id="error_explanation">
			<h2><%= book.errors.count %> errors prohibited this book from being saved:</h2>
			<ul>
			<% book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<%end %>

<div class="field row">
	<h4>Title</h4>
	<%= f.text_field :title %>
</div>

<div class="field row">
	<h4>Opinion</h4>
	<%= f.text_area :body %>
</div>
<div class="field row">
	<div>
		<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
	</div>
</div>

<% end %>