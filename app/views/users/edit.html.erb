  <div class="container">
    <div class="col-xs-3">
      <h2>User info</h2>
      <!-- ここにform_forを追加します -->
      <%= form_for(@user) do |f| %>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <%end %>

      <div class=>
        <label class=>Name</label>
        <%= f.text_field :name, autofocus: true, class: "form-control",  placeholder:"名前"%>
      </div>
      <div>
        <label class=>Image</label>
      </div>
      <div>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>
      <div>
        <label class=>Introduction</label>
        <%= f.text_area :introduction, class: "form-control"%>
      </div>
      <div>
        <%= f.submit "Update User" %>
      </div>
      <% end %>
    </div>
  </div>